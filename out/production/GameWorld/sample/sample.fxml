<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="TOP_CENTER" hgap="10" prefHeight="760.0" prefWidth="385.0" styleClass="container-login" stylesheets="@styles/login.css" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints halignment="LEFT" minWidth="60.0" prefWidth="60.0" />
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" prefWidth="200.0" />
    </columnConstraints>
   <ImageView fitHeight="69.0" fitWidth="285.0" pickOnBounds="true" preserveRatio="true" GridPane.columnSpan="2">
      <image>
         <Image url="@../img/Logo_Game_Wolrd.png" />
      </image>
   </ImageView>
   <Label prefHeight="35.0" prefWidth="134.0" styleClass="login-titulo" text="Fazer Login" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="CENTER" />

    <Label styleClass="login-form-label" text="Email: " GridPane.rowIndex="2">
    </Label>
    <TextField fx:id="campoEmail" prefHeight="109.0" prefWidth="337.0" styleClass="login-form-input" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER">
    </TextField>

    <Label styleClass="login-form-label" text="Senha: " GridPane.rowIndex="4">
    </Label>
    <PasswordField fx:id="campoSenha" prefHeight="109.0" prefWidth="337.0" styleClass="login-form-input" GridPane.columnSpan="2" GridPane.rowIndex="5">
    </PasswordField>

    <Button maxWidth="Infinity" onAction="#entrar" prefHeight="51.0" prefWidth="337.0" styleClass="login-form-botao" text="Entrar" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="6">
        <GridPane.margin>
            <Insets top="15" />
        </GridPane.margin>
    </Button>
   <rowConstraints>
      <RowConstraints maxHeight="114.0" minHeight="34.0" prefHeight="69.0" valignment="CENTER" />
      <RowConstraints maxHeight="114.0" minHeight="10.0" prefHeight="64.0" valignment="CENTER" />
      <RowConstraints maxHeight="28.0" minHeight="10.0" prefHeight="30.0" />
      <RowConstraints maxHeight="41.0" minHeight="0.0" prefHeight="86.0" valignment="CENTER" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints maxHeight="41.0" prefHeight="57.0" />
      <RowConstraints />
   </rowConstraints>

</GridPane>
